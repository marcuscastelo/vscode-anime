{
    "scopeName": "source.anl",
    "patterns": [
        {
            "include": "#global-expression"
        }
    ],
    "repository": {
        "global-expression": {
            "patterns": [
                {
                    "include": "#comment"
                },
                {
                    "include": "#anime"
                },
                {
                    "include": "#date"
                },
                {
                    "include": "#watch"
                },
                {
                    "include": "#tag"
                }
            ]
        },
        "comment": {
            "begin": "//",
            "end": "\n",
            "name": "comment"
        },
        "date": {
            "match": "[0-9]{2}/[0-9]{2}/[0-9]{4}",
            "name": "markup.bold"
        },
        "anime": {
            "match": "^[a-zA-Z](.)*:",
            "begin": "^.+:",
            "end": "",
            "name": "string"
        },
        "watch-time": {
            "match": "[0-9]{2}:[0-9]{2} - [0-9]{2}:[0-9]{2}",
            "name": "markup.heading"
        },
        "watch-episode": {  
            "match": "[0-9]{2,}[ ]*\n",
            "name": "keyword"
        },
        "watch": {
            "begin": "^(?=[0-9]{2}:[0-9]{2})",
            "end": "\n",
            "patterns":[
                {
                    "include": "#watch-time"
                },
                {
                    "include": "#watch-episode"
                }
            ]
        },
        "tag": {
            "begin": "\\[",
            "end": "\\]",
            "beginCaptures": {
                "0": {
                    "name": "tag.bracket.open"
                }
            },
            "endCaptures": {
                "0": {
                    "name": "tag.bracket.close"
                }
            },
            "name": "storage"
        }
    }
}