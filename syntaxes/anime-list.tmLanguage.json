{
    "scopeName": "source.anl",
    "patterns": [
        {
            "include": "#global-expression"
        }
    ],
    "repository": {
        "global-expression": {
            "patterns": [
                {
                    "include": "#comment"
                },
                {
                    "include": "#anime"
                },
                {
                    "include": "#date"
                },
                {
                    "include": "#watch"
                },
                {
                    "include": "#tag"
                }
            ]
        },
        "comment": {
            "begin": "//",
            "end": "\n",
            "name": "comment"
        },
        "date": {
            "match": "[0-9]{2}/[0-9]{2}/[0-9]{4}",
            "name": "markup.bold"
        },
        "anime": {
            "match": "^[a-zA-Z](.)*:",
            "begin": "^.+:",
            "end": "",
            "name": "string"
        },
        "watch": {
            "match": "^([0-9]{2}:[0-9]{2})[ ]*(-)[ ]*([0-9]{2}:[0-9]{2})?[ ]*([0-9]{2,})?",
            "captures":{
                "1": {
                    "name": "entity.name.function"
                },
                "2": {
                    "name": "entity.name.function"
                },
                "3": {
                    "name": "entity.name.function"
                },
                "4": {
                    "name": "constant.character.escape"
                }
            }
        },
        "tag": {
            "begin": "\\[",
            "end": "\\]",
            "beginCaptures": {
                "0": {
                    "name": "tag.bracket.open"
                }
            },
            "endCaptures": {
                "0": {
                    "name": "tag.bracket.close"
                }
            },
            "name": "storage"
        }
    }
}