{
	"name": "marucs-anime",
	"displayName": "Marucs' Anime",
	"description": "Anime Syntax and Utils for VSCode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:anime-list"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "marucs-anime.insertDate",
				"title": "Insert Date"
			},
			{
				"command": "marucs-anime.insertTime",
				"title": "Insert Time"
			},
			{
				"command": "marucs-anime.insertNextEpisode",
				"title": "Insert Next Episode"
			}
		],
		"keybindings":[
			{
				"command": "marucs-anime.insertDate",
				"key": "alt+d",
				"when": "editorTextFocus"
			},
			{
				"command": "marucs-anime.insertTime",
				"key": "alt+t",
				"when": "editorTextFocus"
			},
			{
				"command": "marucs-anime.insertNextEpisode",
				"key": "alt+n",
				"when": "editorTextFocus"
			}
		],
		"languages": [
			{
				"id": "anime-list",
				"extensions": [".anl"],
				"aliases": ["Anime list"]
			}
		],
		"grammars": [
			{
				"language": "anime-list",
				"scopeName": "source.anl",
				"path": "./syntaxes/anime-list.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.54.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}