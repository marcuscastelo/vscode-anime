{
	"name": "marucs-anime",
	"version": "0.2.0",
	"publisher": "Marucs",
	"engines": {
		"vscode": "^1.65.0"
	},
	"license": "MIT",
	"displayName": "Marucs' Anime",
	"description": "Anime Syntax and Utils for VSCode",
	"categories": [
		"Linters",
		"Programming Languages",
		"Other"
	],
	"keywords": [
		"anime",
		"syntax",
		"linter",
		"utils",
		"history",
		"autocomplete",
		"intellisense",
		"highlight"
	],
	"repository": {
		"url": "https://github.com/marcuscastelo/vscode-anime"
	},
	"capabilities": {
		"codeLensProvider" : {
            "resolveProvider": "false"
        },
		"completionProvider" : {
            "resolveProvider": "false",
            "triggerCharacters": ["{", "[", ","]
        },
		"definitionProvider": "true"
	},
	"preview": true,
	"main": "./out/vscode-extension.js",
	"contributes": {
		"commands": [
			{
				"command": "marucs-anime.insertDate",
				"title": "Insert Date",
				"category": "Marucs' Anime"
			},
			{
				"command": "marucs-anime.insertTime",
				"title": "Insert Time",
				"category": "Marucs' Anime"
			},
			{
				"command": "marucs-anime.insertNextEpisode",
				"title": "Insert Next Episode",
				"category": "Marucs' Anime"
			},
			{
				"command": "marucs-anime.formatFriend",
				"title": "Format Friend",
				"category": "Marucs' Anime"
			}
		],
		"keybindings": [
			{
				"command": "marucs-anime.insertDate",
				"key": "alt+d",
				"when": "editorTextFocus"
			},
			{
				"command": "marucs-anime.insertTime",
				"key": "alt+t",
				"when": "editorTextFocus"
			},
			{
				"command": "marucs-anime.insertNextEpisode",
				"key": "alt+n",
				"when": "editorTextFocus"
			}
		],
		"languages": [
			{
				"id": "anime-list",
				"extensions": [
					".anl"
				],
				"aliases": [
					"Anime list"
				]
			}
		],
		"grammars": [
			{
				"language": "anime-list",
				"scopeName": "source.anl",
				"path": "./syntaxes/anime-list.tmLanguage.json"
			}
		]
	},
	"activationEvents": [
		"onLanguage:anime-list"
	],
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^18.11.17",
		"@types/vscode": "^1.54.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"axios": "^0.21.1"
	}
}
